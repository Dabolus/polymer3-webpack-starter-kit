{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      ".idea/**",
      "**/.*",
      "**/*.log",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
